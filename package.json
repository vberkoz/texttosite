{
  "name": "texttosite",
  "version": "1.0.0",
  "description": "",
  "main": "generator.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build:js-css": "esbuild src/app.js --bundle --minify --sourcemap --outdir=dist --loader:.css=css --loader:.txt=text --loader:.html=text",
    "copy-html": "cp src/index.html dist/index.html",
    "build": "npm run clean && npm run build:js-css && npm run copy-html"
  },
